{
	"name": "gray-php-in-html-comments",
	"displayName": "Gray PHP in HTML Comments",
	"description": "Gray out php nested in html comments, so that it looks nicer.",
	"repository": "https://github.com/parkernilson/vsc-gray-php-in-html-comments",
	"publisher": "parkernilson",
	"logo": "./GrayPHPInHTMLCommentsLogo.png",
	"version": "0.0.5",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:php"
	],
	"main": "./out/extension.js",
	"contributes": {
		"grammars": [
			{
				"path": "./syntaxes/php-in-html-comment.json",
				"scopeName": "comment.html.contained.php",
				"injectTo": [
					"text.html.php"
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
